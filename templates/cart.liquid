<!-- /templates/cart.liquid -->
{%- assign fulfillment_method = '' -%}
{%- assign invalid_fulfillment = false -%}
{%- assign has_custom_pricing = false -%}
<div class="grid">
  <div class="grid__item">
    {% if cart.item_count > 0 %}
      <h1 class="h2 cart-title">{{ 'cart.general.title' | t }}</h1>
      <form action="{{ routes.cart_url }}" method="post" novalidate class="cart form">
        <table class="cart-table responsive-table table--no-border">
          <h2 class="sr-only">{{ 'cart.cart_summary.products_header' | t }}</h2>
          <thead class="cart__row cart__header-labels small--hide">
            <th class="text-left cart__table-cell--image">{{ 'cart.label.product' | t }}</th>
            <th class="text-center cart__table-cell--meta"></th>
            <th class="text-right cart__table-cell--price">{{ 'cart.label.price' | t }}</th>
            <th class="text-center cart__table-cell--quantity">{{ 'cart.label.quantity' | t }}</th>
            <th class="text-right cart__table-cell--line-price">{{ 'cart.label.total' | t }}</th>
          </thead>
          <tbody>
            {%- assign subtotal = 0 -%}
            {% for item in cart.items %}
              <tr class="cart__row responsive-table__row">
                <td class="cart__table-cell--image small--text-center">
                  {% unless item.image == blank %}
                    {%- assign img_url = item.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    {%- capture wrapper_id -%}CartImageWrapper--{{ item.image.id }}{%- endcapture -%}
                    {%- capture img_id -%}CartImage--{{ item.image.id }}{%- endcapture -%}
                    {% include 'image-style' with image: item.image, width: 720, height: 600, small_style: false, wrapper_id: wrapper_id, img_id: img_id %}
                    <div id="{{ wrapper_id }}" class="cart__image-wrapper supports-js">
                      <a class="cart__image-container" href="{{ item.url | within: collections.all }}" style="padding-top:{{ 1 | divided_by: item.image.aspect_ratio | times: 100}}%;">
                        <img id="{{ img_id }}"
                             class="cart__image lazyload"
                             src="{{ item.image | img_url: '100x100' }}"
                             data-src="{{ img_url }}"
                             data-widths="[180, 230, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                             data-aspectratio="{{ item.image.aspect_ratio }}"
                             data-sizes="auto"
                             alt="{{ item.title | escape }}"
                             itemprop="image">
                      </a>
                    </div>
                  {% else %}
                    <a class="supports-js" href="{{ item.url | within: collections.all }}">
                      <img src="{{ item | img_url: 'grande' }}" alt="{{ item.title | escape }}">
                    </a>
                  {% endunless %}

                  <noscript>
                    <a href="{{ item.url | within: collections.all }}">
                      <img class="cart__image" src="{{ item | img_url: 'grande' }}" alt="{{ item.title | escape }}">
                    </a>
                  </noscript>
                </td>
                <td class="cart__table-cell--meta text-center large-up--text-left">
                  <p>
                    <a href="{{ item.url }}" class="cart__product-title">{{ item.product.title }}</a>
                    {% unless item.variant.title contains 'Default' %}
                      <small class="visually-hidden">{{ item.variant.title }}</small>
                    {% endunless %}
                    <br>
                    {% if item.properties._method == 'pickup' %}
                      <span class="txt--minor cart__policies">{{item.properties._method}} in {{ item.variant.title }}</span>
                    {% endif %}
                  </p>
                  {%- if item.properties._method != blank -%}
                    {%- if fulfillment_method == '' -%}
                      {%- assign fulfillment_method = item.properties._method -%}
                    {%- elsif item.properties._method != fulfillment_method -%}
                      {%- assign invalid_fulfillment = true -%}
                    {%- endif -%}
                  {%- endif -%}
                  <p class="txt--minor">
                    <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" class="cart__remove">{{ 'cart.general.remove' | t }}</a>
                  </p>
                </td>
                <td class="cart__table-cell--price medium-up--text-right" data-label="{{ 'cart.label.price' | t }}">
                  {%- if item.properties._custom_price != blank -%}
                    {%- assign has_custom_pricing = true -%}
                    {%- assign item_value = item.properties._custom_price | times: 100 -%}
                    {%- assign item_value = item_value | divided_by: item.quantity -%}
                    {{item_value | money}}
                  {%- elsif item.original_price != item.final_price -%}
                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                    <del>{{ item.original_price | money }}</del>
                    <span class="visually-hidden">{{ 'products.product.sale_price' | t }}</span>
                    <span class="order-discount">{{ item.final_price | money }}</span>
                  {%- else -%}
                    {{ item.original_price | money }}
                  {%- endif -%}

                  {% include 'product-unit-price', variant: item, available: item.variant.available %}

                  {%- if item.line_level_discount_allocations != blank -%}
                    <ul class="order-discount order-discount--title order-discount--list order-discount--cart-list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount_allocation in item.line_level_discount_allocations -%}
                        <li class="order-discount__item">
                          {%- include 'icon-saletag' -%}{{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </td>
                <td data-label="{{ 'cart.label.quantity' | t }}" class="cart__table-cell--quantity">
                  <label class="visually-hidden" for="updates_{{ item.key }}">{{ 'cart.label.quantity' | t }}</label>
                  <input class="quantity-selector form__input" type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
                </td>
                <td data-label="{{ 'cart.label.total' | t }}" class="text-right cart__table-cell--line-price">
                  {%- if item.properties._custom_price != blank -%}
                    {%- assign item_value = item.properties._custom_price | times: 100 -%}
                    {%- assign subtotal = subtotal | plus: item_value -%}
                    {{item_value | money}}
                  {%- elsif item.original_line_price != item.final_line_price -%}
                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                    <del>{{ item.original_line_price | money }}</del>
                    <span class="visually-hidden">{{ 'products.product.sale_price' | t }}</span>
                    <span class="order-discount"><b>{{ item.final_line_price | money }}</b></span>
                    {%- assign subtotal = subtotal | plus: item.final_line_price -%}
                  {%- else -%}
                    <b>{{ item.original_line_price | money }}</b>
                    {%- assign subtotal = subtotal | plus: item.original_line_price -%}
                  {%- endif -%}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <footer class="cart__footer">
          {%- if fulfillment_method == 'delivery' and invalid_fulfillment == false and has_custom_pricing == true -%}
            <div class="cart__delivery-method">
              <p>{{ 'layout.cart.choose_delivery_type' | t }}</p>
              <label for="standard-method" class="cart__method-label">
                <input type="radio" name="attributes[_method]" class="js-delivery-type" id="standard-method" value="standard_delivery" checked>
                {{ 'layout.cart.standard_delivery' | t }}
              </label>
              <label for="noon-method" class="cart__method-label">
                <input type="radio" name="attributes[_method]" class="js-delivery-type" id="noon-method" value="before_noon">
                {{ 'layout.cart.before_noon' | t }}
              </label>
              <label for="truck-method" class="cart__method-label">
                <input type="radio" name="attributes[_method]" class="js-delivery-type" id="truck-method" value="first_off_truck">
                {{ 'layout.cart.first_off_truck' | t }}
              </label>
              <button type="button" class="btn btn--check-dates js-check-dates">{{ 'layout.cart.check_available_dates' | t }}</button>
            </div>
            <div>
              <input type="text" class="hide js-tail-datetime-field">
              <div class="cart__date-picker-container js-tail-datetime-holder"></div>
            </div>
          {%- endif -%}
          <div class="grid">
            <div class="grid__item large-up--two-thirds">
              <label for="CartSpecialInstructions" class="cart__note-label label--block">{{ 'cart.general.note' | t }}</label>
              <textarea name="note" id="CartSpecialInstructions" class="input--block cart__note form__input">{{ cart.note }}</textarea>
            </div>
            <div class="grid__item text-center large-up--one-third large-up--text-right">

              {%- if cart.cart_level_discount_applications != blank -%}
                <div class="order-discount-cart-wrapper">
                  {%- for discount_application in cart.cart_level_discount_applications -%}
                    <span class="order-discount order-discount--title order-discount--cart">
                      {%- include 'icon-saletag' -%}<span class="visually-hidden">{{ 'customer.order.discount' | t }}:</span>{{- discount_application.title -}}
                    </span>
                    <span class="order-discount order-discount--cart">-{{ discount_application.total_allocated_amount | money }}</span>
                  {%- endfor -%}
                </div>
              {%- endif -%}

              <p class="cart__subtotal-container">
                <span class="cart__subtotal-title h3">{{ 'cart.general.subtotal' | t }}</span>
                <span class="cart__subtotal h3">{{ subtotal | money }}</span>
              </p>

              {%- capture taxes_shipping_checkout -%}
                {%- if shop.taxes_included and shop.shipping_policy.body != blank -%}
                  {{ 'cart.general.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                {%- elsif shop.taxes_included -%}
                  {{ 'cart.general.taxes_included_but_shipping_at_checkout' | t }}
                {%- elsif shop.shipping_policy.body != blank -%}
                  {{ 'cart.general.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                {%- else -%}
                  {{ 'cart.general.taxes_and_shipping_at_checkout' | t }}
                {%- endif -%}
              {%- endcapture -%}

              <p class="cart__policies txt--emphasis rte">{{ taxes_shipping_checkout }}</p>

              <div class="grid">
                <div class="grid__item one-fifth">
                  <button type="submit" name="update" class="btn btn--secondary update-cart">
                    {% include 'icon-update' %}
                    <span class="icon__fallback-text">{{ 'cart.general.update' | t }}</span>
                  </button>
                </div>
                <div class="grid__item four-fifths">
                  {%- if invalid_fulfillment -%}
                    <p>You cannot mix fulfillment methods</p>
                  {%- else -%}
                    {%- if fulfillment_method == 'delivery' and invalid_fulfillment == false and has_custom_pricing == true -%}
                      <button type="button" name="checkout" class="btn full-width js-go-to-checkout" disabled>{{ 'cart.general.checkout' | t }}</button>
                    {%- else -%}
                      <button type="submit" name="checkout" class="btn full-width">{{ 'cart.general.checkout' | t }}</button>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
              <ul class="list--inline payment-icons">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                  </li>
                {%- endfor -%}
              </ul>
              <p class="cart__continue-shopping">
                <a href="{{ routes.all_products_collection_url }}">
                  {% render 'arrow-left' %}
                  {{ 'cart.general.continue_shopping' | t }}
                </a>
              </p>
            </div>
          </div>
        </footer>
        {%- comment -%}{% render 'shipping-calculator' %}{%- endcomment -%}
        {%- if fulfillment_method == 'delivery' and invalid_fulfillment == false and has_custom_pricing == true -%}
          <input type="hidden" name="attributes[customer_latitude]" class="js-address-latitude" value="{{cart.attributes.customer_latitude}}">
          <input type="hidden" name="attributes[customer_longitude]" class="js-address-longitude" value="{{cart.attributes.customer_longitude}}">
          <input type="hidden" name="attributes[zip_code]" class="js-address-zip" value="{{cart.attributes.zip_code}}">
        {%- endif -%}
      </form>
    {% else %}
    {% comment %}
      The cart is empty
    {% endcomment %}
      <div id="EmptyCart">
        <h1>{{ 'cart.general.title' | t }}</h1>
        <p class="cart--empty-message">{{ 'cart.general.empty' | t }}</p>
        <p class="cart--continue-message">{{ 'cart.general.continue_browsing_html' | t: link: routes.all_products_collection_url }}</p>
        <p class="cart--cookie-message">{{ 'cart.general.cookies_required' | t }}</p>
      </div>
    {% endif %}
  </div>
</div>
{%- if fulfillment_method == 'delivery' and invalid_fulfillment == false and has_custom_pricing == true -%}
  <script>const hasCustomPricing = true;</script>
{%- endif -%}
