<!-- /templates/cart.liquid -->
{%- assign fulfillment_method = '' -%}
{%- assign invalid_fulfillment = false -%}
{%- assign has_custom_pricing = false -%}
{%- assign contains_soil_level_mix = false -%}
{%- assign contains_sod = false -%}
{%- assign contains_deliverable_sod = false -%}
{%- assign available_to_deliver = false -%}
{%- assign contains_pickup_sod = false -%}
{%- assign contains_delivery_items = false -%}
{%- assign hide_expedited = false -%}
{%- assign first_zip = '' -%}
{%- for item in cart.items -%}
  {%- if first_zip == '' -%}
    {%- assign first_zip = item.properties.pickup_location -%}
  {%- endif -%}
  {%- if item.properties._bold_bundles_price != blank -%}
    {%- assign hide_expedited = true -%}
  {%- endif -%}
  {%- if item.product.title contains 'Humus Compost'
    or item.product.title contains 'Raised Garden Kit'
    or item.product.title contains 'Workshop Bundle'
    or item.product.title contains 'Level Mix'
  -%}
    {%- assign contains_soil_level_mix = true -%}
  {%- endif -%}
  {%- if item.product.type contains 'Sod' -%}
    {%- assign contains_sod = true -%}
    {%- if item.properties._method == 'delivery' -%}
      {%- assign available_to_deliver = true -%}
      {%- assign contains_deliverable_sod = true -%}
    {%- else -%}
      {%- assign contains_pickup_sod = true -%}
    {%- endif -%}
  {%- elsif item.product.type contains 'Fertilizer' and item.properties._method == 'delivery' -%}
    {%- assign available_to_deliver = true -%}
  {%- elsif item.product.type contains 'Compost' -%}
    {%- assign contains_sod = true -%}
    {%- if item.properties._method == 'delivery' -%}
      {%- assign contains_deliverable_sod = true -%}
    {%- endif -%}
  {%- endif -%}
  {%- if item.product.tags contains 'grants-delivery' and item.properties._method == 'delivery' -%}
    {%- assign available_to_deliver = true -%}
    {%- assign contains_deliverable_sod = true -%}
  {%- endif -%}
  {%- if item.properties._method != blank -%}
    {%- if fulfillment_method == '' -%}
      {%- assign fulfillment_method = item.properties._method -%}
    {%- elsif item.properties._method != fulfillment_method -%}
      {%- if item.product.type contains 'Sod' and item.properties._method == 'delivery' -%}
        {%- assign invalid_fulfillment = false -%}
        {%- assign fulfillment_method = item.properties._method -%}
      {%- elsif item.product.type contains 'Sod' and item.properties._method == 'pickup' -%}
        {%- assign invalid_fulfillment = false -%}
        {%- assign fulfillment_method = item.properties._method -%}
      {%- elsif contains_deliverable_sod == true and fulfillment_method == 'delivery' -%}
        {%- assign invalid_fulfillment = false -%}
      {%- elsif contains_deliverable_sod == true and item.properties._method == 'delivery' -%}
        {%- if contains_pickup_sod -%}
          {%- assign invalid_fulfillment = true -%}
          {%- assign fulfillment_method = 'none' -%}
        {%- else -%}
          {%- assign invalid_fulfillment = false -%}
          {%- assign fulfillment_method = item.properties._method -%}
        {%- endif -%}
      {%- else -%}
        {%- assign invalid_fulfillment = true -%}
        {%- assign fulfillment_method = 'none' -%}
      {%- endif -%}
    {%- elsif contains_deliverable_sod == true and item.properties._method == 'delivery' -%}
      {%- assign fulfillment_method = item.properties._method -%}
    {%- elsif available_to_deliver == true and item.properties._method == 'delivery' -%}
      {%- assign fulfillment_method = item.properties._method -%}
    {%- endif -%}
    {%- if item.properties._method == 'delivery' -%}
      {%- assign contains_delivery_items = true -%}
    {%- endif -%}
  {%- elsif item.variant.title contains 'ickup' -%}
    {%- if fulfillment_method == '' -%}
      {%- assign fulfillment_method = 'pickup' -%}
    {%- elsif item.properties._method != fulfillment_method -%}
      {%- assign invalid_fulfillment = true -%}
    {%- endif -%}
  {%- elsif item.variant.title contains 'elivery' -%}
    {%- if fulfillment_method == '' -%}
      {%- assign fulfillment_method = 'delivery' -%}
    {%- elsif item.properties._method != fulfillment_method -%}
      {%- assign invalid_fulfillment = true -%}
    {%- endif -%}
  {%- elsif item.properties._bold_bundle_price_rules_external_id != blank -%}
    {%- assign fulfillment_method = cart.attributes.delivery_method -%}
    {%- if fulfillment_method == 'delivery' -%}
      {%- assign contains_delivery_items = true -%}
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}
{%- if fulfillment_method == 'delivery' -%}
  {%- assign contains_delivery_items = true -%}
{%- endif -%}
{%- if contains_delivery_items and contains_pickup_sod -%}
  {%- assign invalid_fulfillment = true -%}
  {%- assign fulfillment_method = 'none' -%}
{%- endif -%}
<div class="grid">
  <div class="grid__item">
    {% if cart.item_count > 0 %}
      <h1 class="h2 cart-title">{{ 'cart.general.title' | t }}</h1>
      <form action="{{ routes.cart_url }}" method="post" novalidate class="cart form js-cart-form">
        <table class="cart-table responsive-table table--no-border">
          <h2 class="sr-only">{{ 'cart.cart_summary.products_header' | t }}</h2>
          <thead class="cart__row cart__header-labels small--hide">
            <th class="text-left cart__table-cell--image">{{ 'cart.label.product' | t }}</th>
            <th class="text-center cart__table-cell--meta"></th>
            <th class="text-right cart__table-cell--price">{{ 'cart.label.price' | t }}</th>
            <th class="text-center cart__table-cell--quantity">{{ 'cart.label.quantity' | t }}</th>
            <th class="text-right cart__table-cell--line-price">{{ 'cart.label.total' | t }}</th>
          </thead>
          <tbody>
            {%- assign subtotal = 0 -%}
            {%- assign variant_title = '' -%}
            {% for item in cart.items %}
              <tr class="cart__row responsive-table__row">
                <td class="cart__table-cell--image small--text-center">
                  {% unless item.image == blank %}
                    {%- assign img_url = item.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    {%- capture wrapper_id -%}CartImageWrapper--{{ item.image.id }}{%- endcapture -%}
                    {%- capture img_id -%}CartImage--{{ item.image.id }}{%- endcapture -%}
                    {% include 'image-style' with image: item.image, width: 720, height: 600, small_style: false, wrapper_id: wrapper_id, img_id: img_id %}
                    <div id="{{ wrapper_id }}" class="cart__image-wrapper supports-js">
                      <a class="cart__image-container" href="{{ item.url | within: collections.all }}" style="padding-top:{{ 1 | divided_by: item.image.aspect_ratio | times: 100}}%;">
                        <img id="{{ img_id }}"
                             class="cart__image lazyload"
                             src="{{ item.image | img_url: '100x100' }}"
                             data-src="{{ img_url }}"
                             data-widths="[180, 230, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                             data-aspectratio="{{ item.image.aspect_ratio }}"
                             data-sizes="auto"
                             alt="{{ item.title | escape }}"
                             itemprop="image">
                      </a>
                    </div>
                  {% else %}
                    <a class="supports-js" href="{{ item.url | within: collections.all }}">
                      <img src="{{ item | img_url: 'grande' }}" alt="{{ item.title | escape }}">
                    </a>
                  {% endunless %}

                  <noscript>
                    <a href="{{ item.url | within: collections.all }}">
                      <img class="cart__image" src="{{ item | img_url: 'grande' }}" alt="{{ item.title | escape }}">
                    </a>
                  </noscript>
                </td>
                <td class="cart__table-cell--meta text-center large-up--text-left">
                  <p>
                    <a href="{{ item.url }}" class="cart__product-title">{{ item.product.title }}</a>
                    {% unless item.variant.title contains 'Default'
                      or item.variant.title contains 'elivery'
                      or item.variant.title contains 'ickup'
                    %}
                      <br><small>{{ item.variant.title }}</small>
                    {% endunless %}
                    {%- unless pickup_address -%}
                      {%- if item.properties._bold_bundles_price != blank -%}
                        {%- assign pickup_address = cart.attributes.pickup_address -%}
                      {%- elsif item.properties._method == 'pickup' -%}
                        {%- assign pickup_address = item.properties.pickup_location -%}
                      {%- endif -%}
                    {%- endunless -%}
                    <br>
                    {%- if item.properties._bold_bundle_price_rules_external_id != blank and variant_title == '' -%}
                      {%- assign variant_title = item.variant.title | downcase -%}
                    {%- endif -%}
                    {%- assign possible_pickup = false -%}
                    {%- if item.properties._bold_bundle_price_rules_external_id != blank -%}
                      {%- if variant_title contains 'pickup' -%}
                        {%- assign possible_pickup = true -%}
                      {%- elsif fulfillment_method == 'pickup' -%}
                        {%- assign possible_pickup = true -%}
                      {%- endif -%}
                    {%- endif -%}
                    {%- if item.properties._bold_bundle_price_rules_external_id != blank and fulfillment_method == 'pickup' -%}
                      {%- unless variant_title contains 'delivery' -%}
                        <small class="cart__policies">{{ 'layout.product.pickup' | t }}:</small>
                      {%- endunless -%}
                    {%- endif -%}
                    {% if item.properties._method == 'pickup' %}
                      <small class="cart__policies">{{ 'layout.product.pickup' | t }}: {{ item.properties.pickup_location }}</small>
                    {%- elsif variant_title contains 'delivery' -%}{% elsif item.properties._method == blank and fulfillment_method == 'pickup' %}
                      <small class="cart__policies">{{ pickup_address }}</small>
                    {% endif %}
                  </p>
                  {%- if item.properties._bold_bundle_price_rules_external_id != blank -%}
                    {%- if item.properties._bold_bundles_price == blank -%}
                      <span class="hide js-remove-bundle-from-cart">{{item.id}}</span>
                    {%- endif -%}
                  {%- endif -%}
                  <p class="txt--minor">
                    <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" class="cart__remove hide js-remove-link">{{ 'cart.general.remove' | t }}</a>
                    <noscript>
                      <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" class="cart__remove">{{ 'cart.general.remove' | t }}</a>
                    </noscript>
                  </p>
                </td>
                <td class="cart__table-cell--price medium-up--text-right" data-label="{{ 'cart.label.price' | t }}">
                  {%- if item.properties._custom_price != blank -%}
                    {%- assign has_custom_pricing = true -%}
                    {%- assign item_value = item.properties._custom_price | times: 100 -%}
                    <span class="js-item-price-{{forloop.index}}">{{item_value | money}}</span>
                    <input type="hidden" name="custom_values" class="js-item-custom-price" data-index="{{forloop.index}}" data-units="{{item.quantity}}" value="{{item.properties._custom_price}}">
                  {%- elsif item.original_price != item.final_price -%}
                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                    <del>{{ item.original_price | money }}</del>
                    <span class="visually-hidden">{{ 'products.product.sale_price' | t }}</span>
                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" data-item-key="{{item.key}}" style="display:none !important;"></span>
                    {%- if item.properties._bold_bundles_price -%}
                      {%- assign has_custom_pricing = true -%}
                      <span>{{ item.original_price | money }}</span><br>
                    {%- endif -%}
                    <{% if item.properties._bold_bundles_price %}del{% else %}span{% endif %} class="order-discount">{{ item.final_price | money }}</{% if item.properties._bold_bundles_price %}del{% else %}span{% endif %}>
                  {%- elsif item.variant.compare_at_price and item.variant.compare_at_price != item.final_price -%}
                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                    <del>{{ item.variant.compare_at_price | money }}</del>
                    <span class="visually-hidden">{{ 'products.product.sale_price' | t }}</span>
                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" data-item-key="{{item.key}}" style="display:none !important;"></span>
                    {%- if item.properties._bold_bundles_price -%}
                      {%- assign has_custom_pricing = true -%}
                      <span>{{ item.original_price | money }}</span><br>
                    {%- endif -%}
                    <{% if item.properties._bold_bundles_price %}del{% else %}span{% endif %} class="order-discount">{{ item.final_price | money }}</{% if item.properties._bold_bundles_price %}del{% else %}span{% endif %}>
                  {%- else -%}
                    {%- assign tag_name = 'span' -%}
                    {%- if item.properties._bold_bundles_price -%}
                      {%- assign has_custom_pricing = true -%}
                      {%- assign tag_name = 'del' -%}
                      <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" data-item-key="{{item.key}}" style="display:none !important;"></span>
                      <span>{{ item.original_price | money }}</span><br>
                    {%- elsif item.product.tags contains 'BYB_DISCOUNT' -%}
                      {%- if contains_sod -%}
                        {%- unless item.properties._bold_bundles_price -%}
                          {%- assign discount_value = 2000 | times: item.quantity -%}
                          {%- assign discounted_price = item.original_price | minus: 2000 -%}
                          {%- assign tag_name = 'del' -%}
                          <span>{{ discounted_price | money }}</span><br>
                        {%- endunless -%}
                      {%- endif -%}
                    {%- endif -%}
                    <{{tag_name}}>{{ item.final_price | money }}</{{tag_name}}>
                  {%- endif -%}

                  {% include 'product-unit-price', variant: item, available: item.variant.available %}

                  {%- if item.line_level_discount_allocations != blank -%}
                    <ul class="order-discount order-discount--title order-discount--list order-discount--cart-list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount_allocation in item.line_level_discount_allocations -%}
                        <li class="order-discount__item">
                          {%- include 'icon-saletag' -%}{{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </td>
                <td data-label="{{ 'cart.label.quantity' | t }}" class="cart__table-cell--quantity">
                  <label class="visually-hidden" for="updates_{{ item.key }}">{{ 'cart.label.quantity' | t }}</label>
                  <input class="quantity-selector form__input js-cart-quantity-selector js-cart-quantity-selector-{{forloop.index}}" type="number" name="updates[]"
                    id="updates_{{ item.key }}" value="{{ item.quantity }}"
                    {% if item.properties._custom_increment %}step="{{item.properties._custom_increment}}"{% endif %}
                    readonly
                    min="{% if item.properties._custom_increment %}{{item.properties._custom_increment}}{% else %}0{% endif %}">
                  <p class="cart__error-message cart__error-message--invalid-quantity js-invalid-quantity js-invalid-quantity-{{forloop.index}} hide">Please enter a valid quantity</p>
                </td>
                <td data-label="{{ 'cart.label.total' | t }}" class="text-right cart__table-cell--line-price">
                  {%- if item.properties._custom_price != blank -%}
                    {%- assign item_value = item.properties._custom_price | times: 100 | times: item.quantity -%}
                    {%- assign subtotal = subtotal | plus: item_value -%}
                    {{item_value | money}}
                  {%- elsif item.original_line_price != item.final_line_price -%}
                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                    <del>{{ item.original_line_price | money }}</del>
                    <span class="visually-hidden">{{ 'products.product.sale_price' | t }}</span>
                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_total" data-item-key="{{item.key}}" style="display:none !important;"></span>
                    <span class="order-discount"><b>{{ item.final_line_price | money }}</b></span>
                    {%- assign subtotal = subtotal | plus: item.final_line_price -%}
                  {%- else -%}
                    {%- assign final_line_price = item.final_line_price -%}
                    {%- if item.properties._bold_bundles_price -%}
                      <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_total" data-item-key="{{item.key}}" style="display:none !important;"></span>
                    {%- elsif item.product.tags contains 'BYB_DISCOUNT' -%}
                      {%- if contains_sod -%}
                        {%- unless item.properties._bold_bundles_price -%}
                          {%- assign discount_value = 2000 | times: item.quantity -%}
                          {%- assign final_line_price = item.final_line_price | minus: discount_value -%}
                        {%- endunless -%}
                      {%- endif -%}
                    {%- endif -%}
                    {%- if item.properties._bold_bundles_price -%}
                      {%- assign item_bundle_price = item.properties._bold_bundles_price | times: item.quantity -%}
                      {%- assign subtotal = subtotal | plus: item_bundle_price -%}
                    {%- else -%}
                      {%- assign subtotal = subtotal | plus: final_line_price -%}
                    {%- endif -%}
                    <b>{{ final_line_price | money }}</b>
                  {%- endif -%}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        {%- if fulfillment_method == '' and has_custom_pricing == true -%}
          {%- assign fulfillment_method = cart.attributes.delivery_method -%}
        {%- endif -%}
        {%- if invalid_fulfillment == true and available_to_deliver == true and fulfillment_method == 'delivery' -%}
          {%- assign invalid_fulfillment = false -%}
        {%- elsif invalid_fulfillment == true and contains_deliverable_sod == true -%}
          {%- assign invalid_fulfillment = false -%}
        {%- endif -%}
        {%- if available_to_deliver == true and fulfillment_method == 'none' -%}
          {%- assign invalid_fulfillment = true -%}
        {%- endif -%}
        <footer class="cart__footer">
          {%- if contains_soil_level_mix == true and contains_sod == false and fulfillment_method == 'delivery' -%}
            <div class="grid">
              <div class="grid__item medium-up--one-half large-up--seven-twelfths">
                {%- unless contains_sod -%}
                  <p class="cart__delivery-message cart__delivery-message--soil-level-mix">{{ 'layout.cart.delivery_soil_level_mix' | t }}</p>
                {%- endunless -%}
              </div>
              <div class="grid__item medium-up--one-half large-up--five-twelfths">
          {%- endif -%}
          <div class="text-right">
            <span class="cart__error-message cart__error-message--warning js-update-cart-message hide">Please update your cart <span class="arrow arrow--right"></span></span>
            <button type="submit" name="update" class="btn btn--secondary update-cart js-update-cart-button">
              {% include 'icon-update' %}
              <span>{{ 'cart.general.update' | t }}</span>
            </button>
          </div>
          {%- if contains_soil_level_mix == true and contains_sod == false -%}
              </div>
            </div>
          {%- endif -%}
          <div class="grid">
            {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
              <div class="grid__item medium-up--one-third">
                <p class="cart__delivery-title">{{ 'layout.cart.choose_delivery_type_html' | t }}</p>
                {%- if fulfillment_method == 'delivery' -%}

                  <label for="standard-method" class="cart__method-label">
                    <input type="radio" name="attributes[_method]" class="js-delivery-type js-check-dates" id="standard-method" value="standard_delivery" data-price="{{ settings.normal_delivery_price | default: '0' }}">
                    <span>{{ 'layout.cart.standard_delivery' | t }}</span>
	              </label>
                  <p>
                    <dfn class="sr-only">{{ 'layout.cart.standard_delivery' | t }}</dfn>
                    {{ 'layout.cart.standard_delivery_explanation' | t }}
                  </p>
                  {%- unless hide_expedited -%}

                    <label for="noon-method" class="cart__method-label">
                      <input type="radio" name="attributes[_method]" class="js-delivery-type js-check-dates" id="noon-method" value="before_noon" data-price="{{ settings.before_noon_delivery_price | default: '4999' }}">
                      <span>{{ 'layout.cart.before_noon' | t }}</span>
                    </label>
                    <p>
                      <dfn class="sr-only">{{ 'layout.cart.before_noon' | t }}</dfn>
                      {{ 'layout.cart.before_noon_explanation' | t }}
                    </p>

                    <label for="truck-method" class="cart__method-label">
                      <input type="radio" name="attributes[_method]" class="js-delivery-type js-check-dates" id="truck-method" value="first_off_truck" data-price="{{ settings.before_nine_delivery_price | default: '9999' }}">
                      <span>{{ 'layout.cart.first_off_truck' | t }}</span>
                    </label>
                    <p>
                      <dfn class="sr-only">{{ 'layout.cart.first_off_truck' | t }}</dfn>
                      {{ 'layout.cart.first_off_truck_explanation' | t }}
                    </p>
                  {%- endunless -%}
                {%- else -%}
                  <div>
                    <label for="pickup-method" class="cart__method-label">
                      <input type="radio" name="attributes[_method]" class="js-delivery-type js-check-dates" id="pickup-method" value="pickup" data-price="0">
                      <span>{{ 'layout.cart.pickup' | t }}</span>
                    </label>
                  </div>
                {%- endif -%}
                <span class="js-checking-dates"></span>
                <p class="cart__error-message hide js-delivery-empty">{{ 'layout.cart.empty_delivery' | t }}</p>
                <p class="cart__error-message hide js-no-dates">{{ 'layout.cart.no_date_available' | t }}</p>
              </div>
            {%- endif -%}
            <div class="grid__item large-up--two-thirds">
              {%- assign textarea_extra_class = '' -%}
              {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
                {%- assign textarea_extra_class = ' cart__note--full' -%}
                <p class="cart__delivery-title">{% if fulfillment_method == 'delivery' %}{{ 'layout.cart.delivery_title_html' | t }}{% else %}{{ 'layout.cart.pickup_title_html' | t }}{% endif %}</p>
                <p class="cart__delivery-message">{{ 'layout.cart.delivery_message' | t }}</p>
                <div class="grid">
                  <div class="grid__item medium-up--one-third">
                    <label for="delivery-date-1">Date 1</label>
                    <input id="delivery-date-1" type="text" name="attributes[_date_1]" class="form__input form__input--date js-tail-datetime-field-1" readonly required>
                    <div class="cart__date-picker-container js-tail-datetime-holder-1"></div>
                  </div>
                  <div class="grid__item medium-up--one-third">
                    <label for="delivery-date-2">Date 2</label>
                    <input id="delivery-date-2" type="text" name="attributes[_date_2]" class="form__input form__input--date js-tail-datetime-field-2" readonly required>
                    <div class="cart__date-picker-container js-tail-datetime-holder-2"></div>
                  </div>
                  <div class="grid__item medium-up--one-third">
                    <label for="delivery-date-3">Date 3</label>
                    <input id="delivery-date-3" type="text" name="attributes[_date_3]" class="form__input form__input--date js-tail-datetime-field-3" readonly required>
                    <div class="cart__date-picker-container js-tail-datetime-holder-3"></div>
                  </div>
                </div>
                <p class="cart__error-message hide js-dates-empty">{{ 'layout.cart.empty_dates' | t }}</p>
                <p class="cart__error-message hide js-dates-same">{{ 'layout.cart.same_dates' | t }}</p>
                <p class="cart__error-message hide js-dates-invalid">{{ 'layout.cart.invalid_dates' | t }}</p>
              {%- endif -%}
              {%- if fulfillment_method == 'delivery' -%}
                <div>
                  <label for="chosen_delivery_address">{{ 'layout.cart.chosen_delivery_address' | t }}</label>
                  <input type="text" id="chosen_delivery_address" name="chosen_delivery_address" class="form__input" value="{{ cart.attributes.customer_address }}" readonly disabled>
                  <p class="cart__error-message cart__error-message--warning">{{ 'layout.cart.chosen_delivery_address_message' | t }}</p>
                </div>
              {%- endif -%}
              <div class="grid">
                <div class="grid__item medium-up--one-half">
                  <label for="phoneNumber">{{ 'layout.cart.confirm_phone_number' | t }}</label>
                  <input type="tel" name="attributes[phone]" id="phoneNumber" class="form__input js-cart-attribute js-phone" data-name="phone" value="{% if customer %}{{ customer.phone }}{% endif %}" required>
                  <p class="cart__error-message hide js-no-phone-message">{{ 'layout.cart.no_phone_number_added' | t }}</p>
                </div>
              </div>
              {%- if has_custom_pricing == false -%}
                <label for="CartSpecialInstructions" class="cart__note-label label--block">{{ 'cart.general.note' | t }}</label>
                <textarea name="note" id="CartSpecialInstructions" class="input--block js-cart-note form__input cart__note{{textarea_extra_class}}" placeholder="{{ 'layout.cart.notes_placeholder' | t }}">{{ cart.note }}</textarea>
              {%- endif -%}
            </div>
            {%- assign push_class = '' -%}
            {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
              {%- assign push_class = ' large-up--push-two-thirds' -%}
              </div>
              <div class="grid">
                <div class="grid__item large-up--one-third">
                  <label for="discount_code" class="cart__note-label label--block">Discount code</label>
                  <input type="text" name="discount" id="discount_code" class="form__input js-discount-code">
                </div>
                <div class="grid__item large-up--two-thirds">
                  <label for="CartSpecialInstructions" class="cart__note-label label--block">{{ 'cart.general.note' | t }}</label>
                  <textarea name="note" id="CartSpecialInstructions" class="input--block js-cart-note form__input cart__note{{textarea_extra_class}}" placeholder="{{ 'layout.cart.notes_placeholder' | t }}">{{ cart.note }}</textarea>
                </div>
            {%- elsif invalid_fulfillment and has_custom_pricing == true -%}
              {%- assign push_class = '' -%}
            {%- endif -%}
            <div class="grid__item text-center large-up--one-third large-up--text-right{{push_class}}">
              {%- if cart.cart_level_discount_applications != blank -%}
                <div class="order-discount-cart-wrapper">
                  {%- for discount_application in cart.cart_level_discount_applications -%}
                    <span class="order-discount order-discount--title order-discount--cart">
                      {%- include 'icon-saletag' -%}<span class="visually-hidden">{{ 'customer.order.discount' | t }}:</span>{{- discount_application.title -}}
                    </span>
                    <span class="order-discount order-discount--cart">-{{ discount_application.total_allocated_amount | money }}</span>
                  {%- endfor -%}
                </div>
              {%- endif -%}

              <p class="cart__subtotal-container">
                <span class="cart__subtotal-title h3">{{ 'cart.general.subtotal' | t }}</span>
                <!-- <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_total" style="display:none !important;"></span> -->
                <span class="cart__subtotal h3 js-cart-subtotal" data-value="{{ subtotal }}">{{ subtotal | money }}</span>
              </p>

              <div>
                {%- if invalid_fulfillment -%}
                  <p class="cart__error-message">{{ 'layout.cart.cannot_mix_methods' | t }}</p>
                {%- else -%}
                  {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
                    <button type="button" name="checkout" class="btn full-width js-go-to-checkout" disabled>{{ 'cart.general.checkout' | t }}</button>
                  {%- elsif invalid_fulfillment == false -%}
                    <button type="submit" name="checkout" class="btn full-width" disabled>{{ 'cart.general.checkout' | t }}</button>
                  {%- else -%}
                    <button type="submit" name="checkout" class="btn full-width">{{ 'cart.general.checkout' | t }}</button>
                  {%- endif -%}
                  <p class="cart__error-message hide js-removed-bundle-products">Some bundle-related products were removed from the cart</p>
                {%- endif -%}
              </div>
              <p class="cart__error-message hide js-no-response">{{ 'layout.cart.no_checkout_available' | t }}</p>
              <ul class="list--inline payment-icons">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                  </li>
                {%- endfor -%}
              </ul>
              <p class="cart__continue-shopping">
                <a href="{{ routes.root_url }}">
                  {% render 'arrow-left' %}
                  {{ 'cart.general.continue_shopping' | t }}
                </a>
              </p>
            </div>
          </div>
        </footer>
        {%- comment -%}{% render 'shipping-calculator' %}{%- endcomment -%}
        {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
          {%- if pickup_address != blank -%}
            <input type="hidden" data-name="pickup_address" name="attributes[pickup_address]" class="js-cart-attribute js-address-pickup" value="{{pickup_address}}">
          {%- else -%}
            <input type="hidden" data-name="latitude" name="attributes[customer_latitude]" class="js-cart-attribute js-address-latitude" value="{{cart.attributes.customer_latitude}}">
            <input type="hidden" data-name="longitude" name="attributes[customer_longitude]" class="js-cart-attribute js-address-longitude" value="{{cart.attributes.customer_longitude}}">
            <input type="hidden" data-name="zipcode" name="attributes[zip_code]" class="js-cart-attribute js-address-zip" value="{{cart.attributes.zip_code}}">
          {%- endif -%}
        {%- endif -%}
      </form>
    {% else %}
    {% comment %}
      The cart is empty
    {% endcomment %}
      <div id="EmptyCart">
        <h1>{{ 'cart.general.title' | t }}</h1>
        <p class="cart--empty-message">{{ 'cart.general.empty' | t }}</p>
        <p class="cart--continue-message">{{ 'cart.general.continue_browsing_html' | t: link: routes.root_url }}</p>
        <p class="cart--cookie-message">{{ 'cart.general.cookies_required' | t }}</p>
      </div>
    {% endif %}
  </div>
</div>
{%- if cart.item_count > 0 -%}
  <script>
    const cartAttributes = {{cart.attributes | json}};
    const chooseStepOneMessage = "{{ 'layout.cart.select_option_in_step_one' | t }}";
    {%- if invalid_fulfillment == false and has_custom_pricing == true -%}
      const hasCustomPricing = true;
    {%- endif -%}
    window.localStorage.removeItem('delivery_type');
    window.localStorage.removeItem('delivery_method');
    window.localStorage.removeItem('delivery_address');
    window.localStorage.removeItem('delivery_zipcode');
    window.localStorage.removeItem('delivery_phone');
    const cartDeliveryMethod = '{{ fulfillment_method }}';
    const cartDeliveryAddress = '{{ cart.attributes.customer_address }}';
    const cartPickupAddress = '{{ pickup_address }}';
    const cartZipCode = '{{ cart.attributes.zip_code }}';
    {% if first_zip != '' %}
      const firstZipAddress = '{{first_zip}}';
    {% endif %}
    const cartItems = [{% for item in cart.items %}{
        {%- assign item_value = 0 -%}
        {%- assign product_type = item.product.type | downcase -%}
        {%- if item.properties._custom_price != blank -%}
          {%- assign item_value = item.properties._custom_price | times: 100 | times: item.quantity -%}
        {%- elsif item.original_price != item.final_price -%}
          {%- assign item_value = item.final_price -%}
        {%- else -%}
          {%- assign item_value = item.original_price -%}
        {%- endif -%}
        {%- assign item_price = item_value | money_without_currency | replace: ',', '' -%}
        {%- if item.properties._bold_bundles_price != blank -%}
          {%- assign product_type = 'bundle' -%}
          {%- assign item_price = item.properties._bold_bundles_price | times: item.quantity | money_without_currency | replace: ',', '' -%}
          full_price: {{item.final_price | times: 0.01}},
        {%- endif -%}
        variant_id: {{item.id}}, quantity: {{item.quantity}}, price: {{item_price}},
        {%- if item.properties -%}
          properties: {
            {%- for prop in item.properties -%}
              {{prop[0] | json}}: {{prop[1] | json}}{%- unless forloop.last -%},{%- endunless -%}
            {%- endfor -%}
          },
        {%- endif -%}
        product_type: {{product_type | json}}, product_id: {{item.product.id}},
        product_name: '{{item.product.title}}', product_image: '{{item.image | img_url: "100x100"}}'
      }{%- unless forloop.last -%},{%- endunless -%}{% endfor %}];
  </script>
{%- endif -%}
